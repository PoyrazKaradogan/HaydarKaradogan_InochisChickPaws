    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 m-1">
                <div class="banner__slider owl-carousel m-auto">
                    <div class="banner__item">
                        <div class="banner__text">
                            <span>Sevdikleriniz için</span>
                            <h1>Favori Ürünlerimiz</h1>
                            <a href="#">Alışveriş yap</a>
                        </div>
                    </div>
                    <div class="banner__item">
                        <div class="banner__text">
                            <span>Sevdikleriniz için</span>
                            <h1>Favori Ürünlerimiz</h1>
                            <a href="#">Alışveriş yap</a>
                        </div>
                    </div>
                    <div class="banner__item">
                        <div class="banner__text">
                            <span>Sevdikleriniz için</span>
                            <h1>Favori Ürünlerimiz</h1>
                            <a href="#">Alışveriş yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
