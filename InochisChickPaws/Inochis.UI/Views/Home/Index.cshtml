@model List<ProductViewModel>
@await Component.InvokeAsync("Categories")
<!-- Banner Section Begin -->
<div class="banner set-bg col-sm-12 container-fluid" data-setbg="/ui/img/banner/banner-1.jpg">
  
</div>
<!-- Banner Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>Ürünler</h4>
                </div>
            </div>
            
        </div>
        <div class="row property__gallery">
            @foreach (var p in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/images/products/@p.ImageUrl">
                            
                            <a asp-area=""
                               asp-controller="Product"
                               asp-action="Details"
                               asp-route-id="@p.Id"
                               class="label new ml-3 mt-1">Detay</a>
                            <ul class="product__hover">
                                <li><a href="/images/products/@p.ImageUrl" class="image-popup"><span class="arrow_expand"></span></a></li>
                                
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <form asp-area=""
                                              asp-controller="ShoppingCart"
                                              asp-action="AddToCart">
                                            <input type="hidden" name="productId" value="@p.Id" />
                                            <input type="hidden" name="quantity" value="1" />

                                            <button type="submit" style="background-color:transparent; border:none"><a><span class="icon_bag_alt"></span></a></button>
                                        </form>
                                    </li>
                                }

                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>
                                <a asp-area=""
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@p.Id">@p.Name</a>
                            </h6>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product__price">@($"{p.Price:C0}")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Product Section End -->





