@model LoginViewModel
<div class="container w-50 mt-5">
    <h6 class="display-4 font-weight-bold ">Login</h6>
    <hr />
    <form asp-area=""
          asp-controller="Account"
          asp-action="Login"
          method="post">
        <div class="row">
            <div class="col-md-12 text-danger" asp-validation-summary="All"></div>
            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label asp-for="UserName"></label>
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group mb-0 mt-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe">
                        <label asp-for="RememberMe" class="form-check-label" for="RememberMe">
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-4">
                <button type="submit" class="btn btn-dark w-100">Login</button>
            </div>
            <div class="col-md-6 mt-4 text-right">
                <a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="btn btn-link">Şifremi Unuttum</a>
            </div>
            <div class="mt-5">Bir hesaba sahip değilseniz lütfen <a href="Register">Register</a>'e tıklayarak yeni bir hesap oluşturunuz.</div>
        </div>
    </form>
</div>